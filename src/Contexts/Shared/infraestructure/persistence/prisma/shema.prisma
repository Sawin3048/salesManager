generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["driverAdapters"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       String @id @unique @default(uuid())
  name     String
  lastname String
  cin      Int
  role     String
  password String
}

model Distributor {
  id      String @id @unique @default(uuid())
  name    String
  contact Json?
  items   Item[]
}

model Item {
  id             String       @id @unique @default(uuid())
  code           String       @unique
  description    String
  saleType       String
  basePrice      Int
  unitaryPrice   Int
  wholesalePrice Int
  stock          Float
  distributor    Distributor? @relation(fields: [distributorId], references: [id])
  distributorId  String?
}

model Customer {
  ruc      String   @id @unique @default(uuid())
  name     String
  lastname String
  tickets  Ticket[]
}

model Sale {
  id         String   @id @unique @default(uuid())
  created_at DateTime
  total      Float
  items      Json
}

model Ticket {
  id          BigInt    @id @default(autoincrement())
  customer    Customer? @relation(fields: [customerRuc], references: [ruc])
  customerRuc String?
}
